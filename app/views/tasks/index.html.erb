<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task) %> <%= link_to task_path(task),
      method: :delete,
      data: {confirm: "Are you sure?"} do %></li>
      <i class="far fa-trash-alt"></i>
      <% end %>
  <% end %>
</ul>

<p><%= link_to 'Add a new task', new_task_path %></p>

